// Zed settings
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "terminal": true,
          "symbol_info": true,
          "open": true,
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "path_search": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      },
      "testing-profile": {
        "name": "testing profile",
        "tools": {
          "list_directory": true,
          "find_replace_file": true,
          "diagnostics": true,
          "create_file": true,
          "create_directory": true,
          "copy_path": true,
          "bash": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "mcp-server-github": {
            "tools": {
              "create_pull_request": true,
              "create_or_update_file": true
            }
          }
        }
      },
      "testing": {
        "name": "testing",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      },
      "write": {
        "name": "Write",
        "tools": {
          "bash": true,
          "batch_tool": true,
          "code_symbols": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "find_replace_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "path_search": true,
          "read_file": true,
          "regex_search": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "mcp-server-github": {
            "tools": {
              "list_commits": true,
              "push_files": true,
              "create_or_update_file": true,
              "add_issue_comment": false
            }
          }
        }
      }
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://192.168.0.225:11434",
      "available_models": [
        {
          "name": "qwen2.5",
          "display_name": "qwen 2.5 coder 32K",
          "max_tokens": 32768
        }
      ]
    }
  },
  "languages": {
    "TypeScript": {
      "show_edit_predictions": false
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "buffer_font_family": "MesloLGS NF",
  "vim_mode": true,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },
  "theme": "Gruvbox Dark",
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "cmd-p": [
    "task::Spawn",
    { "task_name": "file_finder", "reveal_target": "center" }
  ]
}
