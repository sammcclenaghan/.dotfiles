[core]
  editor=nvim
[init]
  defaultBranch = main
[push]
  default = simple
  autoSetupRemote = true
[diff]
  algorithm = histogram
[branch]
  sort = committerdate
[commit]
  verbose = true
[help]
  autocorrect = prompt
[include]
  path = ~/.gitconfig.local
[alias]
  recent = !git branch --sort=-committerdate | fzf --reverse --ansi |cut -f2 | xargs git switch
  send = !git push origin "$(git symbolic-ref --short HEAD)"
  ls = status
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
